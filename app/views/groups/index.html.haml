.wrapper
  .chat-side
    .side-header
      .side-header__box
        %p.side-header__box__user-name user name
        %ul.side-header__box__menu
          %li.side-header__box__menu__edit-user
            %a{href: "/groups/new"}
              %i.fa.fa-edit.icon-color
          %li.side-header__box__menu__new-group
            %a{href: "/users/"}
              %i.fa.fa-cog.icon-color

    .groups
      %a{href: "groups/"}
        .group
          %p.group__group__name text text
          %p.group__group__message text text text
  .chat-main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group testgroup
        %p.main-header__left-box__member-list Member: testuser
      %a{href: "/groups//edit"}
        .main-header__edit-btn Edit
    .messages
      .message
        .message__upper-info
          %p.message__upper-info__user testtest
          %p.message__upper-info__date 20**/**/**/(**) **:**
        %p.message__text textexttext
    .form
      %form.new-message
        .input-box
          .input-box__text
            %input{placeholder: "type a message"}/
          .input-box__image
            %i.fa.fa-image
            .input-box__image__file
          %input.submit-btn{value: "Send"}/





